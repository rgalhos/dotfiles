{
    "margin": "5 5 0",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "image#album-art",
        "custom/spotify",
    ],
    "modules-right": [
        "privacy",
        "custom/notification",
        "network",
        "pulseaudio",
        "cpu",
        "memory",
        "tray",
        "clock",
        "battery",
        "group/group-power"
    ],


    //***************************
    //*  Modules configuration  *
    //***************************

    "hyprland/workspaces": {
        "disable-scroll": true,
        "sort-by-number": true,
        "show-special": true,
        "format": "{icon}",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": [],
            "7": [],
            "8": [],
            "9": [],
        },
        "format-icons": {
            //"urgent": "Û∞ä†",
            "active": "Û∞ÆØ",
            "default": "Û±ÅÇ",
            "empty": "ÔëÑ",
            "1whatsapp": "<span color='#25d366'>Ôà≤</span>",
            "2discord": "<span color='#5865f2' font='Symbols Nerd Font Mono'>Ôáø</span>",
            "3spotify": "<span color='#1db954'>ÔÜº</span>",
            "magicA": "<span color='#cba6f7' font='Symbols Nerd Font Mono'>ÓºÅ·µÉ</span>",
            "magicS": "<span color='#cba6f7' font='Symbols Nerd Font Mono'>ÓºÅÀ¢</span>",
            "magicD": "<span color='#cba6f7' font='Symbols Nerd Font Mono'>ÓºÅ·µà</span>",
        }
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 50,
        "on-click": "hyprctl dispatch fullscreen 1",
        "on-click-middle": "hyprctl dispatch killactive",
        "on-click-right": "~/.config/hypr/bin/close_special.sh",
        "on-scroll-up": "hyprctl dispatch cyclenext",
        "on-scroll-down": "hyprctl dispatch cyclenext prev",
        "rewrite": {
            "": "ü¶à"
        }
    },

    "hyprland/language": {
        "format": "{} Ô†ã",
        "min-length": 5,
        "tooltip": false
    },

    "keyboard-state": {
        //"numlock": true,
        "capslock": true,
        "format": "{name} {icon} ",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú"
        },
    },

    "privacy": {
        "icon-spacing": 12,
        "icon-size": 16,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 20
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 20
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 20
            }
        ]
    },

    "network": {
        "interval": 1,
        // "format": "{ipaddr} | <span font='16px' color='#89b4fa'>Û∞ïí</span> {bandwidthUpBytes}  <span font='16px' color='#89b4fa'>Û∞áö</span> {bandwidthDownBytes}",
        "format": "<span font='16px' color='#89b4fa'>Û∞ïí</span> {bandwidthUpBytes}  <span font='16px' color='#89b4fa'>Û∞áö</span> {bandwidthDownBytes}",
        "format-disconnected": "Disconnected",
        "format-disabled": "",
        "tooltip-format": "IP   {ipaddr}\nMASK {netmask}/{cidr}\n{ifname} via {gwaddr}",
    },

    "clock": {
        "interval": 1,
        "timezone": "America/Maceio",
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "format": "{:%d %b | %H:%M:%S}",
        "calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            },
        },
        "actions":  {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "reverse-scrolling": 1,
        "format": "{volume}% <span font='16px' color='#89b4fa'>{icon}</span>  {format_source}",
        "format-bluetooth": "{volume}% <span font='16px'>Û∞Ç∞</span> {format_source}",
        "format-bluetooth-muted": "<span font='16px'>Ó¨§ Û∞Ç∞</span> {format_source}",
        "format-muted": "<span color='#f38ba8'>muted <span font='16px'>Û∞ùü</span></span> {format_source}",
        "format-source": "{volume}% <span font='16px' color='#89b4fa'>ÔÑ∞</span>",
        "format-source-muted": "<span color='#f38ba8'>muted <span font='16px'>ÔÑ±</span></span>",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Ô£≥",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["Ô©æ", "Ô©ø", "Ô©Ω"]
        },
        "on-click": "pavucontrol",
        // "tooltip": true,
        // "tooltip-format": "IN\t a\nOUT\t{desc}",
    },

    "cpu": {
        "interval": 1,
        "format": "<span font='16px' color='#89b4fa'>Û∞çõ</span> CPU {usage}%",
        "on-click": "gnome-system-monitor",
    },

    "memory": {
        "interval": 1,
        "format": "<span font='16px' color='#89b4fa'>Û∞çõ</span> {used:0.2f} GB <span font='12px' color='#89b4fa7f'>{percentage}%</span>",
        "tooltip": true,
        "tooltip-format":"MEM: {used:0.2f} GB / {total:0.2f} GB\nSWP: {swapUsed:0.2f} GB / {swapTotal:0.2f} GB",
        "on-click": "gnome-system-monitor",
    },

    "tray": {
        "icon-size": 18,
        "spacing": 8
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}<span foreground='#f38ba8' font='20px'><sup> {text}</sup></span>",
        // "format": "    ",
        "format-icons": {
          "notification": "ÔÇ¢",
          "none": "ÔÇ¢",
          "dnd-notification": "Ôá∑<sup> </sup>",
          "dnd-none": "Ôá∑<sup> </sup>",
          "inhibited-notification": "ÔÇ¢",
          "inhibited-none": "ÔÇ¢",
          "dnd-inhibited-notification": "Ôá∑<sup> </sup>",
          "dnd-inhibited-none": "Ôá∑<sup> </sup>"
        },
        "return-type": "json",
        "exec-if": "which swaync-client && [ $(swaync-client --count) -gt 0 ]",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -swb",
        "on-click-right": "swaync-client -d -swb",
        "escape": true
    },

    "custom/spotify": {
        "exec-if": "[ $(playerctl -p spotify status) = 'Playing' ]",
        "exec": "~/.config/waybar/bin/spotify.sh",
        "return-type": "json",
        "format": "{}",
        "interval": 1,
        "tooltip": true,
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up": "playerctl -p spotify volume $(bc <<< \"$(playerctl -p spotify volume) + 0.05\")",
        "on-scroll-down": "playerctl -p spotify volume $(bc <<< \"$(playerctl -p spotify volume) - 0.05\")",
    },

    "image#album-art": {
        "exec-if": "[ $(playerctl -p spotify status) = 'Playing' ]",
        "exec": "~/.config/waybar/bin/spotify-img.sh",
        // "path": "/tmp/cover",
        "size": 37,
        "interval": 1,
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up": "playerctl -p spotify volume $(bc <<< \"$(playerctl -p spotify volume) + 0.05\")",
        "on-scroll-down": "playerctl -p spotify volume $(bc <<< \"$(playerctl -p spotify volume) - 0.05\")",
   },

   "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "custom/power-group",
            "custom/quit",
            "custom/reboot",
            "custom/power",
        ]
    },

    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "state": {
            "warning": 40,
            "critical": 15,
        },
        "format":"{capacity}% <span font='16px' color='#89b4fa'>{icon}</span> ",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "format-charging": "{capacity}% <span font='16px' color='#89b4fa'>Û±êå</span> ",
        "format-plugged": "{capacity}% <span font='16px' color='#89b4fa'>Û±êå</span> ",
        "max-length": 25
    },

    "custom/power-group": {
        "format": "ÔåÉ"
    },

    "custom/quit": {
        "format": "Û∞óº",
        "tooltip": false,
        "on-click": "hyprctl dispatch exit"
    },
    "custom/lock": {
        "format": "Û∞çÅ",
        "tooltip": false,
        "on-click": "swaylock"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "tooltip": false,
        "on-click": "reboot"
    },
    "custom/power": {
        "format": "ÔÄë",
        "tooltip": false,
        "on-click": "ddcutil setvcp D6 05; shutdown -h +1"
    }
}
